{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@bluebird/types": ["./packages/types/src"],
      "@bluebird/types/*": ["./packages/types/src/*"],
      "@bluebird/ui": ["./packages/ui/src"],
      "@bluebird/ui/*": ["./packages/ui/src/*"],
      "@bluebird/config": ["./packages/config"],
      "@bluebird/config/*": ["./packages/config/*"],
      "@bluebird/telemetry": ["./packages/telemetry/src"],
      "@bluebird/telemetry/*": ["./packages/telemetry/src/*"],
      "@bluebird/client": ["./packages/client/src"],
      "@bluebird/client/*": ["./packages/client/src/*"],
      "@bluebird/test-helpers": ["./packages/test-helpers/src"],
      "@bluebird/test-helpers/*": ["./packages/test-helpers/src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020"
    }
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicpriority",
    "synchronousWatchDirectory": false,
    "excludeDirectories": [
      "**/node_modules",
      ".git",
      "dist",
      "build",
      ".next",
      "coverage",
      ".tsbuildinfo"
    ]
  }
}

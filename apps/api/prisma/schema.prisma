// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TakeStatus {
  pending
  planned
  processing
  completed
  failed
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  projects  Project[]
  magicLink MagicLink?
}

model MagicLink {
  id        String    @id @default(cuid())
  userId    String    @unique
  token     String    @unique
  expiresAt DateTime
  used      Boolean   @default(false)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id        String    @id @default(cuid())
  userId    String
  name      String
  lyrics    String
  genre     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  takes     Take[]

  @@index([userId])
}

model Take {
  id        String    @id @default(cuid())
  projectId String
  jobId     String    @unique
  status    TakeStatus @default(pending)
  plan      Json?     // ArrangementSpec
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([jobId, projectId])
  @@index([status])
}

{
  "name": "bluebird",
  "version": "0.1.0",
  "description": "AI music composition platform",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:integration": "pnpm -r run test:integration",
    "test:e2e": "pnpm -F web run test:e2e",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "typecheck": "pnpm -r run typecheck",
    "check": "pnpm run format:check && pnpm run lint && pnpm run typecheck",
    "db:migrate": "pnpm -F api run db:migrate",
    "db:studio": "pnpm -F api run db:studio",
    "cli": "pnpm -F api run cli"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.1.0"
  }
}
